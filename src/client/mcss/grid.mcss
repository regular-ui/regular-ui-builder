.g-lt, .g-rt, .g-mn {
    top: 0;
    bottom: 0;
}

.g-lt {
    left: 0;
    width: $g-lt_width;
}

.g-rt {
    right: 0;
    width: $g-rt_width;
}

.g-mn {
    left: $g-lt_width;
    right: $g-rt_width;
    background: #777;
}

.g-lthd, .g-mnhd, .g-rthd {
    background: #333;
    color: #f4f4f4;
    top: 0;
    left: 0;
    right: 0;
    bottom: $g-top_height;
}

.g-ltbd, .g-mnbd, .g-rtbd {
    background: #444;
    top: $g-top_height;
    left: 0;
    right: 0;
    bottom: 0;
}

.g-mnbd {
    overflow: auto;
    background: #ccc;
}

.g-paper {
    position: absolute;
    width: 800px;
    height: 600px;
    margin: 60px;
    background: white;
    box-shadow: 1px 1px 3px #777;
}