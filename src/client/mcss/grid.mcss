
$g-top_height = 40px;
$g_border-width = 1px;
$g-lt_width = 120px;
$g-rt_width = 240px;

.g-lt, .g-lthd, .g-ltbd, .g-mn, .g-mnhd, .g-mnbd, .g-rt, .g-rthd, .g-rtbd {
    position: absolute;
}

